{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["ES2023"],
    "module": "node16",
    "sourceMap": true,
    "paths": {
      "@/*": ["./src/*"],
      "@/lib/*": ["./src/lib/*"],
      "@/properties/*": ["./src/properties/*"],
      "@/proposals/*": ["./src/proposals/*"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
